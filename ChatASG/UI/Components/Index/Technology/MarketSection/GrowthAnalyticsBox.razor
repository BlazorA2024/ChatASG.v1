@using global::Data.Technology
@inherits StylesGrowthAnalyticsBox
@if (Prams !=null)
{
<div class="@ClassBox">
    <div class="@ClassHeader">
        <div>
            <h4 class="font-bold">@Prams.DataBuild.Title</h4>
            <p class="text-gray-400 text-sm">@Prams.DataBuild.Description</p>
        </div>
        <div class="bg-blue-600 text-white px-3 py-1 rounded-full text-sm font-bold">
            @Prams.DataBuild.GrowthRange
        </div>
    </div>

    <div class="@ClassProgress">
        <div class="h-4 bg-gradient-to-r from-blue-500 to-blue-700 rounded-full"
             style="width: @($"{Prams.DataBuild.Progress}%")">
        </div>
    </div>

    <div class="@ClassLabel">
        <span>@Prams.DataBuild.GrowthAmount</span>
        <span>@Prams.DataBuild.GrowthRange.Split('-')[0]</span>
    </div>
</div>
}
@code {
    [Parameter]
    public CardGrowthAnalyticsBox Prams { get; set; }
    protected override async Task OnInitializedAsync()
    {
        await UpdateStyleAsync(CLASSES);
        await base.OnInitializedAsync();
    }
}
 