 @inherits StylesCardOurservices
@using global::Data.Ourservices

<section id="services" class="@ClassContainer">
    <div class="@ClassItem">
        <div class="@ClassTitle">
            <h2 class="@ClassName">
                @Prams.DataBuild.Name
            </h2>
            <p class="@ClassDescription">
                @Prams.DataBuild.Description
            </p>
        </div>

        <div class="@ClassItems">
            @if (Prams?.Items != null)
            {
                @foreach (var item in Prams.Items)
                {
                    <OurservicesCard Prams="item" />
                }
            }
        </div>
    </div>
</section>

@code {
    [Parameter]
    public CardAddOurservices? Prams { get; set; }

    protected override async Task OnInitializedAsync()
    {
        await UpdateStyleAsync(CLASSES);
        await base.OnInitializedAsync();
    }
}
 
