@using ChatASG.UI.Components.Services.HeaderModul.Search
@using Microsoft.AspNetCore.Components
@using global::Data.HeaderModels
@using global::Data.HeaderModels
@inherits StylesSHeaderModel

@if (Prams != null)
{
    <header class="@ClassContainer "
            style="background-image: linear-gradient(rgba(15, 23, 42, 0.9), rgba(15, 23, 42, 0.9)), url('@Prams.DataBuild.Image');">
        <div class="@ClassItem ">
            <div class="@Classtext ">
                <h1 class="@Classh1 ">
                    <span class="@Classspan ">@Prams.DataBuild.Name</span> @Prams.DataBuild.Title
                </h1>
                <p class="@Classsp ">
                    @Prams.DataBuild.Description
                </p>

                <!-- Search Bar with Toggles -->
              <SearchBar Prams="Prams.ISearc"  />
            </div>
        </div>
    </header>
}
else
{
    <p>Loading header...</p>
}

@code {
   // [Parameter]public HeaderModel? Prams { get; set; }
    [Parameter] public CardListHeaderModel? Prams { set; get; }
    protected override async Task OnInitializedAsync()
    {
        await UpdateStyleAsync(CLASSES);
        await base.OnInitializedAsync();
    }
}



