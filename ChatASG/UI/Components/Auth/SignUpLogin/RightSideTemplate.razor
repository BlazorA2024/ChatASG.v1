@using global::Data.AddAuth
@if (Prams != null)
{
    <button @onclick="() => signuplogin(Prams.Button)"
            class="flex-1 py-2 px-4 rounded-lg font-medium transition-all duration-300
                   @(ActiveTab == Prams.Button ? "tab-active" : "text-gray-600")">
        @Prams.Button
    </button>
}

@code {
    [Parameter] public DataButtons? Prams { get; set; }

    // اسم التبويب النشط لتلوين الزر
    [Parameter] public string ActiveTab { get; set; } = "Login";

    // استدعاء الحدث عند النقر
    [Parameter] public EventCallback<string> OnTabClicked { get; set; }

    private async Task signuplogin(string tab)
    {
        if (OnTabClicked.HasDelegate)
        {
            await OnTabClicked.InvokeAsync(tab);
        }
    }
}

