@using global::Data.Visualization
@inherits StylesCardValidation
@if (Prams != null)
{
    <div class="@ClassContainer " id="validation-tab">
        <div class="@ClassItem ">
            <h3 class="@ClassName ">
                <i class="@Prams.DataBuild.Icon     @ClassIcon "></i> @Prams.DataBuild.Name
            </h3>
            <div id="validation-results" class="space-y-4">
                <div class="text-center py-8 text-gray-500">
                    <i class="@Prams.DataBuild.Icons   @ClassIcons "></i>
                    <p class="@ClassTitle">@Prams.DataBuild.Title </p>
                    <p class="@ClassDescription ">@Prams.DataBuild.Description  </p>
                </div>
            </div>
        </div>
    </div>
  
    

}
@code {
   
    [Parameter] public CardValidation? Prams { get; set; }
    protected override async Task OnInitializedAsync()
    {
        await UpdateStyleAsync(CLASSES);
        await base.OnInitializedAsync();
    }
    
}
