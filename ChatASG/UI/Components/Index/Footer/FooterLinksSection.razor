@using global::Data.FooterSection
@inherits StylesCardFooterLinkSection

@if (Prams != null)
{
    <div>
        <h4 class="@ClassTitle ">@Prams.DataBuild.Title</h4>
        <ul class="@ClassUl">
            @foreach (var link in Prams.DataBuild.Links)
            {
                <li><a href="@link.Url" class="@ClassLink">@link.Text</a></li>
            }
        </ul>
    </div>
}

@code {

   
    [Parameter] public CardFooterLinkSection? Prams { get; set; }

    protected override async Task OnInitializedAsync()
    {
        await UpdateStyleAsync(CLASSES);
        await base.OnInitializedAsync();
    }
}
