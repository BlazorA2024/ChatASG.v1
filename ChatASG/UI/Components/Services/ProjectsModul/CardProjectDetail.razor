@using global::Data.Projects
@inherits StyleCardProjectDetail

@if (Prams != null)
{
    <div class="@ClassContainer">
        <h3 class="@ClassTitle">@Prams.DataBuild.Headline</h3>
        <p class="@ClassDescription">@Prams.DataBuild.Description</p>

        <ul class="space-y-2 mb-6">
            @foreach (var feature in Prams.DataBuild.Features)
            {
                <li class="@ClassFeatureItem">
                    <i class="@ClassFeatureIcon"></i>
                    <span>@feature</span>
                </li>
            }
        </ul>

        <div class="flex flex-wrap gap-2">
            @foreach (var skill in Prams.DataBuild.Skills)
            {
                <span class="@ClassSkillTag">@skill</span>
            }
        </div>
    </div>

}

@code {


    [Parameter] public ListProjectDetail? Prams { get; set; }

    protected override async Task OnInitializedAsync()
    {
        await UpdateStyleAsync(CLASSES);
        await base.OnInitializedAsync();
    }
}










